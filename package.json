{
  "name": "time-based-erc20-staking",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "contract:test": "turbo run test --filter contract",
    "contract:compile": "turbo run compile --filter contract"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.0",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
