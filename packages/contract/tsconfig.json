{
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "es2022",
    "module": "esnext",

    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "moduleResolution": "node",

    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*", "artifacts/**/*.json", "typechain-types/**/*"],
  "exclude": ["node_modules", "dist"]
}
